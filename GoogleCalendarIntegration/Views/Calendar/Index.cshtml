@model IEnumerable<GoogleCalendarIntegration.Models.CalendarEvent>

@{
    ViewData["Title"] = "My Calendar Events";
    Layout = "_CalendarLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Calendar Events</h2>
    <a href="/Calendar/Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Event
    </a>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <div class="card event-card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Summary</h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            <i class="far fa-calendar-alt"></i> 
                            @item.Start.ToString("f") - @item.End.ToString("t")
                        </h6>
                        @if (!string.IsNullOrEmpty(item.Location))
                        {
                            <p class="card-text">
                                <i class="fas fa-map-marker-alt"></i> @item.Location
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <p class="card-text">@item.Description</p>
                        }
                        <div class="event-actions">
                            <span class="badge @(item.Status == "confirmed" ? "badge-success" : "badge-warning")">
                                @item.Status
                            </span>
                            <div>
                                <a href="#" class="btn btn-sm btn-outline-primary">
                                    <i class="far fa-edit"></i> Edit
                                </a>
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="eventId" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                            onclick="return confirm('Are you sure you want to delete this event?')">
                                        <i class="far fa-trash-alt"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        No upcoming events found. <a href="/Calendar/Create" class="alert-link">Create your first event</a>.
    </div>
}
